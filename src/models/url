const mongoose = require('mongoose')

const urlSchema = new mongoose.Schema(
    { 
        urlCode: {type:String , required : true `url code is required`, unique : true, lowercase, trim : true }, 
        longUrl: { type:String , required : true `long url  is required`, valid url},
         shortUrl: { type:String , required : true `short url is required`, unique : true} 
    },

    {timestamps: true}
)

module.exports = mongoose.model("URL", urlSchema)